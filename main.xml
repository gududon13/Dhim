<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center|top">

	

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button
			android:backgroundTint="#000000"
			android:textColor="#FFFFFF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Select Ref"
			android:id="@+id/selectref"/>

		<Button
			android:backgroundTint="#000000"
			android:textColor="#FFFFFF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SELECT OBJ"
			android:id="@+id/selectobj"/>

		<ToggleButton
			android:backgroundTint="#000000"
			android:textColor="#FFFFFF"
			android:id="@+id/crop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Crop"
			android:textOff="crop off"
			android:textOn="crop on"/>

	</LinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="App devloped by : Siddharth "
		android:textSize="20sp"
		android:textColor="#040404"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="contact : leophysics13@gmail.com "
		android:textSize="20sp"
		android:textColor="#040404"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/objectimage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/refimage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/objfft"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/reffft"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/objfftflt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/reffftflt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/finalobjimg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/finalrefimg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/ifftobject"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<ImageView
				android:adjustViewBounds="true"
				android:background="#000000"
				android:scaleType="centerCrop"
				android:id="@+id/ifftrefer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:layout_margin="8dp"
				android:elevation="10dp"/>

			<Button
				android:backgroundTint="#000000"
				android:textColor="#FFFFFF"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="proceed"
				android:id="@+id/proccedfurther"/>

			<ToggleButton
				android:backgroundTint="#000000"
				android:textColor="#FFFFFF"
				android:id="@+id/phasecalc"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Crop"
				android:textOff="phase calc off"
				android:textOn="phase calc on"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:id="@+id/centerphasetext"
				android:text="center phase"
				android:textSize="30dp"
				android:textColor="#000000"/>

			<TextView
				android:gravity="center"
				android:textColor="#000000"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="periferi"
				android:id="@+id/periferiphasetext"
				android:textSize="30dp"/>

			<TextView
				android:gravity="center"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="periferi"
				android:id="@+id/contact_doctor"
				android:textSize="30dp"/>

			<WebView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/mainWebView"/>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

